<%= stylesheet_link_tag "show_page", "data-turbo-track": "reload" %>

<div class="card mx-auto" style="width: 80vw; height:80vh">
  <div class="card-body">
    <div class="card-title"><h1 ><%= @trip.name %></h1></div>
    <div class="card-subtitle mb-2 text-muted"><h4><%= @trip.destination %></h4></div>
    <p class="card-text"><%= @trip.departure_date.strftime("%B, %d, %Y")%> to <%=@trip.return_date.strftime("%B, %d, %Y")%></p>
    <p class="card-text">Created by: <%= @trip.user.first_name%></p>
    <div class="d-flex">
      <div class="m-1">
          <%= link_to 'Edit', edit_trip_path(@trip), class:"btn btn-outline-dark" %>
      </div>
      <div class="m-1">
         <%= button_to 'Delete', trip_path(@trip), method: :delete, form: {data: {turbo_confirm: "Are you sure you would like to proceed?"}}, class:"btn btn-outline-danger" %>
      </div>
   </div>
   <br>
   <br>
  
   <div class="d-grid gap-2 col-12 mx-auto">
      <%= link_to 'View Details', trip_details_path(@trip), class:"btn btn-dark" %>
      <%= link_to 'To Do Lists', trip_todo_lists_path(@trip), class:"btn btn-dark" %>
      
   </div> 
 </div>
</div>

<div id="calendar"></div>





