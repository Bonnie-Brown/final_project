<h1> <%= @trip.name %> </h1>
<h3> <%= @trip.destination %> </h3>
<p><%= @trip.departure_date.strftime("%B, %d, %Y") %> to <%=@trip.return_date.strftime("%B, %d, %Y")%></p>

<div></div>
    <div>
        <%= button_to 'Delete', trip_path(@trip), method: :delete, form: {data: {turbo_confirm: "Are you sure you would like to proceed?"}} %>
    </div>
    <div>
        <%= link_to 'Edit', edit_trip_path(@trip) %>
    </div>
</div>


