<header class = 'header'>
    <h2>Update Trip</h2>
</header>

<div class = "form">
    <%= form_with(model: @trip) do |form| %>

        <% if @trip.errors.any? %>

            <ul>
                <% @trip.errors.full_messages.each do |message| %>

                    <li> <%= message %> </li>

                <% end %>

            </ul>

        <% end %>

        <div class="class=mb-3">
            <%= form.label :name, {class: "form-label"} %>
            <br>
            <%= form.text_field :name, {class: "form-control"} %>
        </div>

        <br>

        <div class="mb-3">
            <%= form.label :destination, {class: "form-label"} %>
            <br>
            <%= form.text_field :destination, {class: "form-control"} %>
        </div>

        <br>

        <div class="mb-3">
            <%= form.label :departure_date, {class: "form-label"} %>
            <br>
            <%= form.date_select :departure_date, {class: "form-control"} %>
        </div>

        <br>

        <div class="mb-3">
            <%= form.label :return_date, {class: "form-label"} %>
            <br>
            <%= form.date_select :return_date, {class: "form-control"} %>
        </div>

        <br>

        <div class="mb-3">
            <%= form.label :image_url, {class: "form-label"} %>
            <br>
            <%= form.text_area :image_url, {class: "form-control"} %>
        </div>
</div>

<div class="d-flex">
    <div class="m-1">
        <%= form.submit 'Update', class:"btn btn-dark" %>
     
        <% end %>
    </div>
    <div class="m-1">
        <%= button_to 'Delete', trip_path(@trip), method: :delete, form: {data: {turbo_confirm: "Are you sure you would like to proceed?"}}, class:"btn btn-danger" %>
     </div>
</div>