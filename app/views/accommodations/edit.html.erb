<h1>Update Accommodation</h1>

<div class = "form">
    <%= form_with(model:[@trip, @accommodation]) do |form| %>



    <div class="class=mb-3">
        <%= form.label :name, {class: "form-label"} %>
        <%= form.text_field :name, {class: "form-control"} %>
    </div>
    <div class="class=mb-3">
        <%= form.label :address, {class: "form-label"} %>
        <%= form.text_field :address, {class: "form-control"} %>
    </div>
    <div class="class=mb-3">
        <%= form.label :phone, {class: "form-label"} %>
        <%= form.text_field :phone, {class: "form-control"} %>
    </div>
    <div class="class=mb-3">
        <%= form.label :email, {class: "form-label"} %>
        <%= form.text_field :email, {class: "form-control"} %>
    </div>

    <br>

    <div class="mb-3">
        <%= form.label :check_in_date, {class: "form-label"} %>
        <%= form.date_select :check_in_date, {class: "form-control"} %>
    </div>
    <div class="mb-3">
        <%= form.label :check_out_date, {class: "form-label"} %>
        <%= form.date_select :check_out_date, {class: "form-control"} %>
    </div>
    <div class="mb-3">
            <%= form.label :check_in_time, {class: "form-label"} %>
            <%= form.time_select :check_in_time, {class: "form-control"} %>
             <%= form.label :check_out_time, {class: "form-label"} %>
            <%= form.time_select :check_out_time, {class: "form-control"} %>
    </div>
    <div class="mb-3">
        <%= form.label :note, {class: "form-label"} %>
        <%= form.text_area :note, {class: "form-control"} %>
    </div>

    <%= form.submit class:"btn btn-dark" %>
   <%= button_to 'Delete', trip_accommodation_path(@trip, @accommodation), method: :delete, form: {data: {turbo_confirm: "Are you sure you would like to proceed?"}}, class:"btn btn-danger" %>
 <% end %>
</div>