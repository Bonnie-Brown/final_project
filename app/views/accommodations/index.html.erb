<h1>Accommodations</h1>

<div>

 <% @accommodations.each do |accommodation| %>
      <div class="card mx-auto text-center index" style = "width: 40vw;">
      
        <div class="card-body">
       
          <h5 class="card-title"><%= accommodation.name %></h5>
          <p class="card-title"><%= accommodation.address %></p>
          <p class="card-title">From <%= accommodation.check_in_date%> to <%= accommodation.check_out_date%></p>
          <%= link_to 'View', [@trip, accommodation]%>
        </div>
      </div>

        <% end %>

<%= link_to 'Add Accommodation', new_trip_accommodation_path(@trip), class:"btn btn-dark" %>

</div>

